{
  "name": "select",
  "description": "A simple, typesafe selector library.",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "main": "./dist/select.umd.cjs",
  "module": "./dist/select.js",
  "types": "./index.d.ts",
  "exports": {
    "types": "./index.d.ts",
    "import": "./dist/select.js",
    "require": "./dist/select.umd.cjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepack": "npm run build",
    "prepublish": "npm run test:coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.33.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vitest": "^0.33.0"
  }
}
